---
const allVideos = await Astro.glob("../content/videos/*.md");
const reversedVideos = allVideos.reverse();
---

{
  reversedVideos.slice(0,1).map((video) => (
  <div class="p-5 mb-4 text-light bg-opacity-10 rounded-3 background banner-glow" style={{backgroundImage: `linear-gradient(0deg, rgba(0, 0, 0, 0.8), rgba(24, 24, 24, 0.7)), url(/images/${video.frontmatter.image})`}}>
    <div class="container-fluid py-5">
      <h1 class="display-5 fw-bold">{video.frontmatter.name}</h1>
      <p class="col-md-8 fs-4">{video.frontmatter.desc}</p>
      <a class="btn btn-outline-light btn-lg me-4" type="button" href={video.frontmatter.link} target="_blank">Watch Now</a>
      <a class="btn btn-outline-light btn-lg" type="button" href={"scripts/" + video.frontmatter.script}>Read Now</a>
    </div>
  </div>
  ))
}

<style>
  .background {
    min-height: 100%;
    background-size: cover;
    background-position: center;
  }

  .banner-glow {
    transition: all 0.25s;
  }

  .banner-glow:hover {
    box-shadow: 0rem 0rem 0.5rem 0.5rem var(--secondary-color);
    transform: scale(1.01);
  }
</style>